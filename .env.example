# Interactive Classroom Platform API - Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_TITLE=Interactive Classroom Platform API
API_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=6101
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=interactive_classroom
DB_ECHO=false

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=720
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Settings
COOKIE_NAME=refresh-token
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
COOKIE_MAX_AGE=604800

# Email Configuration (for verification codes)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# Verification Code Settings (registration and session email-code)
VERIFICATION_CODE_EXPIRE_MINUTES=15
VERIFICATION_CODE_LENGTH=6

# Guest token (session email-code entry): how long a verified guest can use the link without re-entering code
GUEST_TOKEN_EXPIRE_DAYS=90

# Anonymous participant display (session join)
ANONYMOUS_SLUG_PREFIX=anon_
ANONYMOUS_DISPLAY_NAME_PREFIX=Guest_

# CloudPub Configuration (for public API URL)
CLOUDPUB_TOKEN=your-cloudpub-token
API_PORT=6100

# Frontend Configuration
FRONT_PORT=10202

