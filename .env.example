# Interactive Classroom Platform API - Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_TITLE=Interactive Classroom Platform API
API_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=interactive_classroom
DB_ECHO=false

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=720

# Email Configuration (for verification codes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# Verification Code Settings
VERIFICATION_CODE_EXPIRE_MINUTES=15
VERIFICATION_CODE_LENGTH=6

# CloudPub Configuration (for public API URL)
CLOUDPUB_TOKEN=your-cloudpub-token
API_PORT=8000

